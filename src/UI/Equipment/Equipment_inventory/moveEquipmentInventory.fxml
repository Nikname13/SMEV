<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import com.jfoenix.validation.ValidationFacade?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="UI.Equipment.Equipment_inventory.Controller.MoveEquipmentInventoryController"
            style="-fx-background-color: #ffffff;">
    <children>
        <JFXTextField fx:id="mTextFieldDepartment" prefWidth="150.0" promptText="Из отдела" focusColor="#40a85f"
                      editable="false" labelFloat="true" AnchorPane.leftAnchor="20.0"
                      AnchorPane.topAnchor="30.0"/>
        <ValidationFacade fx:id="mFacadeWorkerFrom" AnchorPane.topAnchor="30.0" AnchorPane.leftAnchor="190.0">
            <control>
                <JFXComboBox fx:id="mComboBoxWorkerFrom" focusColor="#40a85f" labelFloat="true" prefWidth="150.0"
                             promptText="Сотрудник"/>
            </control>
        </ValidationFacade>
        <ValidationFacade fx:id="mFacadeDepartmentTo" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="90.0">
            <control>
                <JFXComboBox fx:id="mComboBoxDepartment" focusColor="#40a85f" labelFloat="true" prefWidth="150.0"
                             promptText="В отдел"/>
            </control>
        </ValidationFacade>
        <ValidationFacade fx:id="mFacadeWorkerTo" AnchorPane.leftAnchor="190.0" AnchorPane.topAnchor="90.0">
            <control>
                <JFXComboBox fx:id="mComboBoxWorkerTo" focusColor="#40a85f" labelFloat="true" prefWidth="150.0"
                             promptText="Сотрудник"/>
            </control>
        </ValidationFacade>
        <JFXTextArea fx:id="mTextAreaBase" focusColor="#40a85f" promptText="Обоснование для перемещения"
                     labelFloat="true" prefHeight="100.0" prefWidth="320.0" AnchorPane.leftAnchor="20.0"
                     AnchorPane.topAnchor="155.0"/>
        <JFXButton text="Сохранить" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="280.0" prefWidth="150.0"
                   prefHeight="35.0"/>
        <JFXButton text="Отмена" AnchorPane.leftAnchor="190.0" AnchorPane.topAnchor="280.0" prefWidth="150.0"
                   prefHeight="35.0"/>

    </children>
</AnchorPane>
