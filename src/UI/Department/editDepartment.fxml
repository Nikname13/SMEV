<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane fx:id="anchorPaneEditDepartment"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="UI.Department.Controller.EditDepartmentController">
    <children>
        <!--основная информация-->
        <AnchorPane fx:id="mAnchorPaneBasicInfoDepartment" style="-fx-background-color: #ffffff;" minWidth="450.0"
                    minHeight="190.0" prefWidth="450.0" prefHeight="190.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <JFXTextField fx:id="mTextFieldNumber" focusColor="#40a85f" labelFloat="true"
                              prefHeight="25.0" prefWidth="200.0" promptText="Номер"
                              AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="20.0"/>
                <JFXTextField fx:id="mTextFieldName" focusColor="#40a85f" labelFloat="true" layoutY="80.0"
                              prefHeight="25.0" prefWidth="200.0" promptText="Имя"
                              AnchorPane.leftAnchor="10.0"/>
                <JFXComboBox fx:id="mComboBoxArea" focusColor="#40a85f" labelFloat="true" layoutX="206.0"
                             prefHeight="25.0" prefWidth="200.0" promptText="Район" AnchorPane.topAnchor="20.0"
                             AnchorPane.rightAnchor="10.0"/>
                <JFXRadioButton fx:id="mRadioButtonElQ" layoutX="13.0" layoutY="130.0" mnemonicParsing="false"
                                text="Электронная очередь" AnchorPane.leftAnchor="10.0"/>
                <JFXRadioButton fx:id="mRadioButtonRenting" layoutX="14.0" layoutY="161.0" mnemonicParsing="false"
                                text="в аренде" AnchorPane.leftAnchor="10.0"/>
                <JFXTextArea fx:id="mTextAreaDescription" focusColor="#40a85f" labelFloat="true" layoutX="206.0"
                             minHeight="55.0" maxHeight="89.0" prefHeight="89.0" prefWidth="200.0"
                             promptText="Комментарий" AnchorPane.topAnchor="83.0" AnchorPane.rightAnchor="10.0"/>
                <JFXButton fx:id="mButtonUpdate" onAction="#onClickEdit" ripplerFill="#40a85f" mnemonicParsing="false"
                           text="Сохранить"
                           AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0" prefWidth="75.0"
                           visible="false"/>
            </children>
        </AnchorPane>
        <!--три кнопки док, конфиг и фото-->
        <AnchorPane style="-fx-background-color: #ffffff;" prefHeight="190.0" prefWidth="150.0"
                    AnchorPane.leftAnchor="460.0" AnchorPane.topAnchor="0.0">
            <children>
                <JFXButton fx:id="mButtonDoc" ripplerFill="#40a85f" text="Документация" AnchorPane.leftAnchor="10.0"
                           AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0" prefHeight="50.0"/>
                <JFXButton fx:id="mButtonConfig" ripplerFill="#40a85f" text="Конфигурация" AnchorPane.leftAnchor="10.0"
                           AnchorPane.topAnchor="70.0" AnchorPane.rightAnchor="10.0" prefHeight="50.0"/>
                <JFXButton fx:id="mButtonPhoto" ripplerFill="#40a85f" text="Фотографии" AnchorPane.leftAnchor="10.0"
                           AnchorPane.topAnchor="130.0" AnchorPane.rightAnchor="10.0" prefHeight="50.0"/>
            </children>
        </AnchorPane>
        <!--аватар-->
        <AnchorPane style="-fx-background-color: #ffffff;" prefHeight="190.0" AnchorPane.topAnchor="0.0"
                    AnchorPane.leftAnchor="620.0" prefWidth="360">
            <children>
                <JFXButton AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.bottomAnchor="10.0"
                           prefWidth="340.0" style="-fx-background-color: #a8f1b3;"/>
            </children>
        </AnchorPane>

        <AnchorPane style="-fx-background-color: #ffffff;"
                    AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="200.0" prefWidth="980.0" prefHeight="100.0">
            <children>
                <Label text="Адрес" AnchorPane.leftAnchor="10.0"
                       AnchorPane.topAnchor="10.0">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Label>
                <JFXListView fx:id="mListViewLocation" prefHeight="60.0" prefWidth="395.0" AnchorPane.leftAnchor="10.0"
                             AnchorPane.topAnchor="30.0"/>
                <JFXButton onAction="#onClickAddLocation" text="Добавить" AnchorPane.topAnchor="30.0"
                           AnchorPane.leftAnchor="415.0" prefHeight="60.0"
                           ripplerFill="#40a85f" prefWidth="70.0"/>
                <Label text="Сотрудники" AnchorPane.leftAnchor="530.0"
                       AnchorPane.topAnchor="10.0">
                    <font>
                        <Font size="10.0"/>
                    </font>
                </Label>
                <JFXListView fx:id="mListViewWorker" prefHeight="60.0" prefWidth="395.0" AnchorPane.bottomAnchor="10.0"
                             AnchorPane.leftAnchor="495.0" AnchorPane.topAnchor="30.0"/>
                <JFXButton onAction="#onClickAddWorker" text="Добавить" AnchorPane.topAnchor="30.0"
                           AnchorPane.leftAnchor="900.0" prefHeight="60.0"
                           ripplerFill="#40a85f" prefWidth="70.0"/>
            </children>

        </AnchorPane>
        <AnchorPane style="-fx-background-color: #ffffff;" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="310.0" prefWidth="560">
            <children>
                <JFXTreeTableView fx:id="mTreeTableEquipmentInventory" prefHeight="200.0"
                                  AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0"
                                  AnchorPane.bottomAnchor="10.0">
                    <columns>
                        <JFXTreeTableColumn fx:id="mNameEquipmentColumn" prefWidth="100.0" text="Наименование"/>
                        <JFXTreeTableColumn fx:id="mNumberEquipmentColumn" prefWidth="100.0" text="Номер"/>
                        <JFXTreeTableColumn fx:id="mStateEquipmentColumn" prefWidth="75.0" text="Состояние"/>
                        <JFXTreeTableColumn fx:id="mDescriptionEquipmentColumn" prefWidth="263.0"
                                            text="Заметка для отдела"/>
                    </columns>
                </JFXTreeTableView>

            </children>
        </AnchorPane>
        <!--информация об оборудовании-->
        <AnchorPane style="-fx-background-color: #ffffff;" AnchorPane.leftAnchor="570.0" AnchorPane.topAnchor="310.0"
                    AnchorPane.bottomAnchor="0.0" prefWidth="410.0">
            <fx:include source="/UI/TabPane/tabPaneSecondLvl.fxml" AnchorPane.topAnchor="0"
                        AnchorPane.leftAnchor="0" AnchorPane.bottomAnchor="0"
                        AnchorPane.rightAnchor="0"/>
        </AnchorPane>
    </children>
</AnchorPane>
