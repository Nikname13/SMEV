<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="UI.Provider.Controller.AddProviderController"
            fx:id="mAnchorPaneAddProvider" style="-fx-background-color: #ffffff;"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <JFXTextField fx:id="mTextFieldName" focusColor="#40a85f" labelFloat="true"
                      prefHeight="25.0" prefWidth="250.0" promptText="Поставщик" AnchorPane.topAnchor="25.0"
                      AnchorPane.leftAnchor="15.0"/>
        <JFXTextArea fx:id="mTextAreaDescription" focusColor="#41a65d" labelFloat="true" promptText="Комментарий" AnchorPane.leftAnchor="15" AnchorPane.topAnchor="90"
        prefHeight="50" prefWidth="250.0"/>
        <JFXButton fx:id="buttonAdd" mnemonicParsing="false" onAction="#onClickAdd" prefWidth="120.0" prefHeight="35.0"
                   ripplerFill="#40a85f" text="Сохранить" AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="155.0"/>
        <JFXButton fx:id="buttonCancel" mnemonicParsing="false" ripplerFill="#40a85f" prefWidth="120.0"
                   prefHeight="35.0" AnchorPane.leftAnchor="145.0" AnchorPane.topAnchor="155.0"
                   text="Отмена" onAction="#onClickCancel"/>
    </children>
</AnchorPane>
