<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.*?>
<?import com.jfoenix.controls.JFXTextField?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="mAnchorPaneWorkers" prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8.0.121" fx:controller="UI.Worker.Controller.WorkersController">
    <children>
        <AnchorPane AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" style="-fx-background-color: #ffffff;"
                    prefHeight="55" minHeight="55" prefWidth="500" minWidth="500">
            <children>
                <JFXButton onAction="#onClickAdd" ripplerFill="#40a85f" style="-fx-background-color: #a8f1b3;"
                           mnemonicParsing="false" text="Новый сотрудник"
                           AnchorPane.leftAnchor="10" AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10"
                           AnchorPane.bottomAnchor="10"/>
            </children>
        </AnchorPane>
        <AnchorPane AnchorPane.leftAnchor="0" AnchorPane.topAnchor="65" AnchorPane.bottomAnchor="0"
                    style="-fx-background-color: #ffffff;"
                    prefHeight="55" minHeight="55" prefWidth="500" minWidth="500">
            <children>
                <JFXTextField fx:id="mTextFieldSearch" focusColor="#40a85f" labelFloat="true"
                              prefHeight="25.0" promptText="Поиск"
                              AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="20.0"
                              AnchorPane.rightAnchor="10.0"/>
                <TableView fx:id="mTableViewWorkers" AnchorPane.leftAnchor="10" AnchorPane.topAnchor="60"
                           AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
                    <columns>
                        <TableColumn fx:id="mNameColumn" prefWidth="200.0" text="ФИО"/>
                        <TableColumn fx:id="mPostColumn" prefWidth="150.0" text="Должность"/>
                        <TableColumn fx:id="mDepartmentColumn" prefWidth="150.0" text="Отдел"/>
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
