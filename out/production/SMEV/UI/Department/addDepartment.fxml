<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import com.jfoenix.controls.JFXTextField?>

<?import com.jfoenix.validation.ValidationFacade?>
<AnchorPane fx:id="mAnchorPaneAddDepartment" prefHeight="370.0" prefWidth="600.0" style="-fx-background-color: #ffffff;"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="UI.Department.Controller.AddDepartmentController">
    <children>
        <JFXTextField fx:id="mTextFieldNumber" focusColor="#40a85f" labelFloat="true" layoutX="14.0" layoutY="16.0"
                      prefHeight="25.0" prefWidth="200.0" promptText="Номер отдела"/>
        <JFXTextField fx:id="mTextFieldName" focusColor="#41a65d" labelFloat="true" layoutX="14.0" layoutY="76.0"
                      prefHeight="25.0" prefWidth="200.0" promptText="Наименование отдела"/>
        <ValidationFacade fx:id="mValidationArea"  layoutX="14.0" layoutY="136.0">
            <control>
                <JFXComboBox fx:id="mComboBoxArea" focusColor="#40a85f" labelFloat="true"
                             prefHeight="25.0" prefWidth="200.0" promptText="Район"/>
            </control>
        </ValidationFacade>
        <ValidationFacade fx:id="mValidationLocation"  layoutX="14.0" layoutY="196.0">
            <control>
                <JFXComboBox fx:id="mComboBoxLocation" editable="true" focusColor="#40a85f" labelFloat="true"
                             prefHeight="25.0" prefWidth="200.0" promptText="Адрес"/>
            </control>
        </ValidationFacade>

        <JFXRadioButton fx:id="mRadioButtonElQ" layoutX="235.0" layoutY="14.0" mnemonicParsing="false"
                        text="Электронная очередь"/>
        <JFXRadioButton fx:id="mRadioButtonRenting" layoutX="235.0" layoutY="45.0" mnemonicParsing="false" text="В аренде"/>
        <JFXTextArea fx:id="mTextAreaDescription" focusColor="#41a65d" labelFloat="true" layoutX="14.0" layoutY="260.0"
                     prefHeight="100.0" prefWidth="200.0" promptText="Комментарий" wrapText="true"/>
        <JFXButton fx:id="buttonAdd" layoutX="226.0" layoutY="337.0" mnemonicParsing="false" onAction="#onClickAdd" prefWidth="75.0"
                   ripplerFill="#40a85f" text="Сохранить"/>
        <JFXButton fx:id="buttonCancel" layoutX="301.0" layoutY="337.0" mnemonicParsing="false" ripplerFill="#40a85f" prefWidth="75.0"
                   text="Отмена"/>
    </children>

</AnchorPane>
